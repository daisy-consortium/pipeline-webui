# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Application
GET     /                                   controllers.Application.index()

# Login
GET     /login                              controllers.Login.login()
POST    /login                              controllers.Login.authenticate()

# Logout
GET     /logout                             controllers.Login.logout()

# Scripts
GET		/scripts/:id                        controllers.Scripts.getScript(id: String)
GET     /scripts                            controllers.Scripts.getScripts()

# Jobs
GET		/jobs/:id/result                    controllers.Jobs.getResult(id: String)
GET		/jobs/:id/log                       controllers.Jobs.getLog(id: String)
GET		/jobs/:id                           controllers.Jobs.getJob(id: String)
GET     /jobs                               controllers.Jobs.getJobs()
POST    /jobs                               controllers.Jobs.postJob()

# Uploads
GET		/uploads/:id                        controllers.Uploads.getUpload(id: Long)
POST    /uploads                            controllers.Uploads.postUpload()

# Account
GET		/account                            controllers.Account.overview()
POST	/account                            controllers.Account.changeDetails()

# Administrator
GET		/admin                              controllers.Administrator.settings()

# First use
GET     /firstuse/welcome                   controllers.FirstUse.getWelcome()
POST    /firstuse/setuploaddir              controllers.FirstUse.postSetUploadDir()
GET     /firstuse/setuploaddir              controllers.FirstUse.getSetUploadDir()
POST    /firstuse/setws                     controllers.FirstUse.postSetWS()
GET     /firstuse/setws                     controllers.FirstUse.getSetWS()
POST    /firstuse/createadmin               controllers.FirstUse.postCreateAdmin()
GET     /firstuse/createadmin               controllers.FirstUse.getCreateAdmin()
GET     /firstuse                           controllers.FirstUse.getFirstUse()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)
