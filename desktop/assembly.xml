<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>desktop</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <baseDirectory>daisy-pipeline-webui</baseDirectory>
    <fileSets>
        
        <!-- Copy server version of the Web UI, except for the default database and start scripts -->
        <fileSet>
            <directory>target/daisy-pipeline-webui</directory>
            <excludes>
                <exclude>dp2webui/**</exclude>
                <exclude>start</exclude>
                <exclude>start.bat</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        
        <!-- Copy default Derby database and start scripts for the desktop version; mark the scripts as executable -->
        <fileSet>
            <directory>dist-resources</directory>
            <excludes>
                <exclude>start</exclude>
                <exclude>start.bat</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>dist-resources</directory>
            <includes>
                <include>start</include>
                <include>start.bat</include>
            </includes>
            <fileMode>0755</fileMode>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
