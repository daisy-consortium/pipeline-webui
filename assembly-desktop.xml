<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>desktop</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/framework/daisy-pipeline</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/pipeline2-webui</directory>
            <excludes>
                <exclude>start</exclude>
                <exclude>start.bat</exclude>
            </excludes>
            <outputDirectory>/daisy-pipeline/webui</outputDirectory>
        </fileSet>
        
        <fileSet>
            <directory>dist-resources/both</directory>
            <excludes>
                <exclude>start</exclude>
                <exclude>start.bat</exclude>
                <exclude>uninstall</exclude>
                <exclude>uninstall.bat</exclude>
                <exclude>application.conf</exclude>
            </excludes>
            <outputDirectory>/daisy-pipeline/webui</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>dist-resources/both</directory>
            <includes>
                <include>uninstall</include>
                <include>uninstall.bat</include>
            </includes>
            <fileMode>0755</fileMode>
            <outputDirectory>/daisy-pipeline/webui</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>dist-resources/both</directory>
            <includes>
                <include>application.conf</include>
            </includes>
            <outputDirectory>/daisy-pipeline/webui</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>themes</directory>
            <outputDirectory>/daisy-pipeline/webui/themes</outputDirectory>
        </fileSet>
        
        <fileSet>
            <directory>dist-resources/desktop</directory>
            <excludes>
                <exclude>start</exclude>
                <exclude>start.bat</exclude>
            </excludes>
            <outputDirectory>/daisy-pipeline/webui</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>dist-resources/desktop</directory>
            <includes>
                <include>start</include>
                <include>start.bat</include>
            </includes>
            <fileMode>0755</fileMode>
            <outputDirectory>/daisy-pipeline/webui</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.daisy.pipeline:assembly:zip</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>
</assembly>
