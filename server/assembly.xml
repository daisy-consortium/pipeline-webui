<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>server</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <baseDirectory>daisy-pipeline-webui</baseDirectory>
    <fileSets>
        
        <!-- Copy distribution generated by the Play! Framework -->
        <fileSet>
            <directory>target/webui</directory>
            <excludes>
                <exclude>start</exclude>
                <exclude>start.bat</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        
        <!-- Copy themes -->
        <fileSet>
            <directory>themes</directory>
            <outputDirectory>/themes</outputDirectory>
        </fileSet>
        
        <!-- Copy default Derby database and start scripts; mark the scripts as executable -->
        <fileSet>
            <directory>dist-resources</directory>
            <excludes>
                <exclude>application.conf</exclude>
                <exclude>uninstall</exclude>
                <exclude>uninstall.bat</exclude>
                <exclude>start</exclude>
                <exclude>start.bat</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>dist-resources</directory>
            <includes>
                <include>application.conf</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>dist-resources</directory>
            <includes>
                <include>uninstall</include>
                <include>uninstall.bat</include>
                <include>start</include>
                <include>start.bat</include>
            </includes>
            <fileMode>0755</fileMode>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        
    </fileSets>
</assembly>
